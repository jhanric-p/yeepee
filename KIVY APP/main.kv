        width: '100dp'
        allow_stretch: True
        keep_ratio: True

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            text: root.product_name
            font_size: '14sp'
            bold: True
            color: (0.48, 0, 0, 1)
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            text: root.product_price
            font_size: '12sp'
            color: (0.48, 0, 0, 1)
            size_hint_y: None
            height: self.texture_size[1]

        BoxLayout:
            size_hint_y: None
            height: '30dp'
            spacing: 10

            Button:
                text: "Add to Cart"
                font_size: '12sp'
                background_color: (0.8, 0, 0, 1)
                color: (1, 1, 1, 1)
                on_release: root.on_add_to_cart()

            Button:
                text: "Buy Now"
                font_size: '12sp'
                background_color: (0.48, 0, 0, 1)
                color: (1, 1, 1, 1)
                on_release: root.on_buy_now()

