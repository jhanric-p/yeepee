#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<LoginScreen>:
    username: username
    password: password
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: None
        width: '300dp'
        height: '400dp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Image:
            source: '../pup_study_style/static/assets/pup_logo.png'
            size_hint: (None, None)
            size: '100dp', '100dp'
            pos_hint: {'center_x': 0.5}
            allow_stretch: True
            keep_ratio: True

        Label:
            text: "Welcome To PUP Study with Style"
            font_size: '18sp'
            color: (0.6, 0, 0, 1)
            bold: True
            size_hint_y: None
            height: '30dp'
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        TextInput:
            id: username
            hint_text: "Username"
            multiline: False
            size_hint_y: None
            height: '40dp'
            font_size: '16sp'
            padding: [10, 10, 10, 10]
            background_normal: ''
            background_color: (1, 1, 1, 1)
            foreground_color: (0, 0, 0, 1)
            cursor_color: (0.6, 0, 0, 1)

        TextInput:
            id: password
            hint_text: "Password"
            multiline: False
            password: True
            size_hint_y: None
            height: '40dp'
            font_size: '16sp'
            padding: [10, 10, 10, 10]
            background_normal: ''
            background_color: (1, 1, 1, 1)
            foreground_color: (0, 0, 0, 1)
            cursor_color: (0.6, 0, 0, 1)

        BoxLayout:
            size_hint_y: None
            height: '50dp'
            spacing: 10

            Button:
                text: "Login"
                background_color: (0.6, 0.8, 0.9, 1)
                color: (0, 0, 0, 1)
                on_release: root.do_login()

            Button:
                text: "Sign Up"
                background_color: (0.6, 0.8, 0.9, 1)
                color: (0, 0, 0, 1)
                on_release: app.root.current = 'register'

<ProfileScreen>:
