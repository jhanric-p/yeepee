<ProductItem>:
    orientation: 'horizontal'
    size_hint_y: None
    height: '120dp'
    padding: 5
    spacing: 10
    canvas.before:
        Color:
            rgba: (0.95, 0.95, 0.95, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]

    Image:
        source: root.image_source if root.image_source else '../pup_study_style/static/assets/question_mark.png'
